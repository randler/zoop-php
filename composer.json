{
    "name": "randler/lib-zoop-php",
    "description": "SDK de pagamentos Zoop",
    "license": "MIT",
    "type": "library",
    "keywords": [
        "zoop",
        "payment",
        "gateway "
    ],
    "authors": [
        {
            "name": "Wallace Souza",
            "email": "wallace-2033@hotmail.com"
        },
        {
            "name": "Randler Ferraz",
            "email": "randlersi@gmail.com"
        }
    ],
    "config": {
        "optimize-autoloader": true
    },
    "require": {
        "php": ">=5.5",
        "ext-curl": "*",
        "ext-json": "*",
        "psr/log": "^1.1",
        "guzzlehttp/guzzle": ">=6.2",
        "italodeveloper/guzzle-zend": "^1.2"
    },
    "require-dev": {
        "phpunit/phpunit": "^8",
        "squizlabs/php_codesniffer": "^3.3",
        "zendframework/zend-http": ">=2.5"
    },
    "scripts": {
      "test": [
        "@composer install",
        "vendor/bin/phpunit"
      ]
    },
    "autoload": {
        "psr-4": {
            "Zoop\\": "src/"
        }
    },
    "autoload-dev": {
      "psr-4": {
        "Zoop\\Test\\": "tests/unit"
      }
    }
}
